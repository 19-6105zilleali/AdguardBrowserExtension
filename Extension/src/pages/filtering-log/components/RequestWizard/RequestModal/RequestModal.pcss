.request-modal {
    position: fixed;
    right: 0px;
    top: 0px;
    bottom: 0px;
    left: auto;
    background: var(--white);
    color: var(--gray700);
    font-size: 14px;
    box-sizing: border-box;
    width: 460px;
    padding-bottom: 87px;
    box-shadow: 2px 2px 10px var(--shadow);
    overflow-y: scroll;

    @media (max-width: 640px) {
        width: 100%;
    }

    &__overlay {
        position: static;
    }

    &__title {
        display: flex;
        align-items: center;
        padding: 32px 38px 32px;
        position: fixed;
        width: 100%;
        background: var(--white);

        @media (max-width: 640px) {
            padding: 24px 16px 32px;
        }
    }

    &__content {
        margin: 80px 0 0;
    }

    &__header {
        font-size: 24px;
        color: var(--gray900);
        letter-spacing: 0;
        text-align: center;
        margin: 0 8px;
    }

    &__navigation {
        background-color: transparent;
        border: none;
        background-position: center;
        background-repeat: no-repeat;
        width: 24px;
        height: 24px;
        padding: 5px;
        background-size: 12px;

        &--close {
            color: var(--gray900);
        }

        &--back {
            color: var(--gray700);
        }

        &:hover {
            cursor: pointer;
        }
    }

    &__controls {
        display: flex;
        justify-content: space-between;

        @media (max-width: 640px) {
            flex-direction: column;
            margin-top: 28px;
        }
    }

    &__button {
        border: none;
        padding: 9px 7px;
        cursor: pointer;
        font-size: 13px;
        color: var(--white);
        line-height: 8px;
        background: var(--btnGreen);
        border-radius: 8px;
        height: 48px;
        text-transform: uppercase;
        width: 183px;
        margin: 24px 32px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;

        @media (min-width: 641px) {
            &:first-child {
                margin-left: 32px;
                margin-right: 24px;
            }

            &:nth-child(2) {
                margin-left: 0;
                margin-right: 38px;
            }
        }

        @media (max-width: 640px) {
            width: calc(100% - 48px);
            margin: 8px 24px;
        }

            &--white {
            background-color: var(--white);
            color: var(--gray900);
            border: 1px solid var(--gray700);
        }

        &--red {
            background-color: var(--red400);
            color: var(--white);
        }

        &:focus {
            outline: none;
        }
    }
}
