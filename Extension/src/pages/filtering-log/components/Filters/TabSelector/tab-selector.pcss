.tab-selector {

    & select {
        max-width: 300px;
        height: 30px;
        line-height: 30px;
        padding: 0 30px 0 10px;
        outline: 0;
        background: url(../../../../assets/icons/arrow-down-grey.svg) right 13px bottom 9px no-repeat;
        background-size: 12px 10px;
        border: 1px solid #e3e3e3;
        border-radius: 2px;
        margin-left: 10px;
        cursor: pointer;
        appearance: none;
    }
}
