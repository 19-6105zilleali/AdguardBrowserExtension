.events-types {
    &__type {
        background: none;
        border: none;
        display: inline;
        margin: 0;
        padding: 10px;
        cursor: pointer;

        &:focus {
            outline: none;
        }

        &.active {
            /* TODO move color to variables */
            border-bottom: 3px solid #66b574;
        }
    }
}
