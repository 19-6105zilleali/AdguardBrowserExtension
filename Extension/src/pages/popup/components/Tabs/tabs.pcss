.tabs-panel {
    display: flex;

    .tab {
        font-size: 16px;
        width: 50%;
        height: 40px;
        border: 0;
        /* TODO use colors from variables */
        background-color: #e9e9e9;
        color: #888888;
        cursor: pointer;
        text-align: center;
        line-height: 40px;

        &_active {
            background-color: #fff;
            color: #434343;
        }
    }
}
