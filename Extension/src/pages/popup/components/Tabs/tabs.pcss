.tabs-panel {
    display: flex;

    .tab {
        width: 50%;
        height: 40px;
        border: 0;
        /* TODO use colors from variables */
        background-color: grey;
        cursor: pointer;
        text-align: center;
        line-height: 40px;

        &_active {
            background-color: white;
        }
    }
}
