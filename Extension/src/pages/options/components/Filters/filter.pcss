.filter {
    display: flex;
    align-items: center;
    position: relative;
    padding: 20px 0;
    box-shadow: 0 1px 0 0 var(--greye7);
    min-height: 70px;

    &__info {
        max-width: 600px;
    }

    &__desc {
        margin-right: 25px;
        color: var(--grayd8);
        font-size: 12px;
        margin-top: 10px;
    }
}
