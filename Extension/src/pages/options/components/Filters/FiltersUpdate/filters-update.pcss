.filters-update {
    border: 0;
    outline: none;
    height: 100%;
    display: flex;

    &__info {
        text-align: right;
        font-size: 16px;
        display: flex;
        flex-direction: column;
        margin-right: 8px;
    }

    &__desc {
        font-size: 14px;
        color: var(--gray700);
        margin-top: 5px;

        @media (prefers-color-scheme: dark) {
            opacity: 0.5;
            color: var(--white);
        }
    }

    &__btn {
        color: var(--gray400);

        @media (prefers-color-scheme: dark) {
            color: var(--gray700);
        }

        &--loading {
            animation: spin 2s linear infinite;
        }
    }
}

.light-mode {
    .filters-update__desc {
        opacity: 1;
        color: var(--gray700);
    }
}

.dark-mode {
    .filters-update__desc {
        color: var(--white);
        opacity: 0.5;
    }
}

@keyframes spin {
    0% {transform: rotate(0)}
    100% {transform: rotate(360deg)}
}

.light-mode {
    .filters-update__btn {
        color: var(--gray400);
    }
}

.dark-mode {
    .filters-update__btn {
        color: var(--gray700);
    }
}
