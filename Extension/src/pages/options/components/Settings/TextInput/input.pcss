.input {
    &__in {
        height: 32px;
        border: 1px solid var(--gray88);
        padding: 0 15px;
        margin-top: 12px;
        margin-bottom: 12px;
        width: 100%;
        max-width: 400px;

        @media (max-width: 640px) {
            max-width: 326px;
        }

        @media (max-width: 320px) {
            max-width: 100%;
        }
    }
}
